@using Activity_Center.Models
@model Event

<h2>@Model.Title</h2>
<p></p>
<a href="/home"><button type="button" class="btn btn-primary">Home</button></a>
<a href="/logout"><button type="button" class="btn btn-danger">Logoff</button></a>
<p></p>
<h5>Event Coordinator: </h5>
<ul>
    @foreach(var user in @ViewBag.users){
        if(@user.UserId == @Model.UserId){
            <li>@user.FirstName<span> </span> @user.LastName</li>
        }
    }
</ul>
<h5>Description:</h5>
<ul>
    <li>@Model.Description</li>
</ul>
<h5>Participants:</h5>
<ul>
    @foreach(var assoc in ViewBag.GuestsList.Participants)
    {
        <li>@assoc.User.FirstName<span> </span>@assoc.User.LastName</li>
    }
</ul>