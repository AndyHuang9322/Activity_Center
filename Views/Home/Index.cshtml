@model User

<div class="container">
    <div class="row">
        <div class ="col-3">
            <h1>Registration</h1>
            <form asp-action="CreateUser" asp-controller="Home" method="post">
                <div class="form-group">
                    <span asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control">
                </div>  
                <div class="form-group">
                    <span asp-validation-for="LastName"></span>
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
        <div class ="col-2">
        </div>
        <div class ="col-3">
            <partial name="Login.cshtml" />
        </div>
    </div>
</div>
