@model UserLogin

<h1>Login</h1>
<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="LogEmail"></span>
        <label asp-for="LogEmail">Email</label>
        <input asp-for="LogEmail" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LogPassword"></span>
        <label asp-for="LogPassword">Password</label>
        <input asp-for="LogPassword" class="form-control">
    </div>
    <button type="submit" class="btn btn-success">Login</button>
</form>