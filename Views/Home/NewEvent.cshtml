@model Event

<h2>Dojo Activity Center</h2>
<p></p>
<h4><l>Create an Activity!</l></h4>
<a href="/home"><button type="button" class="btn btn-success">Dashboard</button></a>
<a href="/logout"><button type="button" class="btn btn-danger">Logout</button></a>

<div class="row mt-4">
    <div class ="col-3">
        <form asp-action="CreateEvent" asp-controller="Home" method="post">
            <input type="hidden" name="Event" value=" ">
            <div class="form-group">
                <span asp-validation-for="Title"></span>
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control">
            </div>  
            <div class="form-group">
                <span asp-validation-for="StartTime"></span>
                <label asp-for="StartTime">Event Date/Time</label>
                <input asp-for="StartTime" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Duration"></span>
                <label asp-for="Duration">Duration</label>
                <input asp-for="Duration" class="form-control">
            </div>
            <div class="form-group">
                <select class="custom-select my-1 mr-sm" id="inlineFormCustomSelectPref" name="TimeType" class="form-control">
                    <option value="0">Days</option>
                    <option value="1">Hours</option>
                    <option value="2">Minutes</option>
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>